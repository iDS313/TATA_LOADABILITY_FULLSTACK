    <!-- Tab panes -->
    <div class="tab-content">
        <div id="menu2" class="container tab-pane active">
            <br>
            <h3 class="my-3 text-center text-primary">Add Stock Details</h3>
            <form action="#">
                <div class="container px-5">
                    <div class="row">


                        <div class="form-group col-md-3 mt-3">
                            <label class="text-primary" for="sku">Select SKU</label>
                            <select class="form-control" name="SKU" id="">
                                <option value="" selected="selected">Select SKU</option>
                                <option value="1">14000000000319</option>
                                <option value="2">14000000000324</option>
                                <option value="3">14000000000329</option>
                                <option value="4">14000000000334</option>
                                <option value="5">14000000000446</option>
                            </select>
                        </div>
                        <div class="form-group col-md-3 mt-3">
                            <label class="text-primary" for="sku">Select SKU</label>
                            <select class="form-control" name="SKU" id="">
                                <option value="" selected="selected">Select SKU</option>
                                <option value="13">Tata Tea Elaichi Chai PP Rs 10 (34g)</option>
                                <option value="14">Tata Gold Leaf 500gm Cathedral RSTG</option>
                                <option value="15">Tata Gold Leaf 250gm Cathedral RSTG</option>
                                <option value="16">Tata Gold Leaf 1kg Standipack RSTG</option>
                                <option value="17">Tata Gold Mixture 250g Cathedral Pack</option>
                                <option value="18">Tata Gold Mixture 500g Cathedral Pack</option>
                                <option value="19">Tata Tea Gold Mixture 100g polypack</option>
                            </select>
                        </div>
                        <div class="form-group col-md-5 ml-md-5 mt-3">
                            <label class="text-primary" for="pr">Add Stock Quantity</label>
                            <input class="form-control" type="number" name="pr" id="pr"
                                   placeholder="Add Stock Quantity" required>
                        </div>
                        <div class="col-md-6 mt-3">
                            <div class="form-group position-relative">
                                <label class="text-primary" for="fileupload">Upload Stock Details</label>
                                <div class="file-ip">
                                    <span class="file-name ng-binding"> </span><span class="download-btn" ng-click="download()">
                                        <i class="fa fa-download"></i>
                                    </span> <span>Select File</span>
                                </div>
                                <input type="file" style="opacity:0" class="form-control" ng-disabled="IsEdit"
                                       id="filesheet" name="fileupload" placeholder="Enter Shift of Packing">
                            </div>
                        </div>
                        <div class="col-md-5 mt-3"></div>
                        <div class="col-md-6 my-3">
                            <div class="form-group">
                                <button class="btn btn-custom"> Previous</button>
                                <button class="btn btn-custom"> Next</button>
                            </div>
                        </div>
                        <div class="col-md-6 my-3 pr-4">
                            <div class="form-group text-right pr-3">
                                <button class="btn btn-custom btn-gradient-danger">Delete</button>
                                <button class="btn btn-custom btn-gradient">Save Details</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>

    </div>


</div>
